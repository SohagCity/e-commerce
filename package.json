{
  "name": "e-commerce",
  "version": "1.0.0",
  "description": "E-commerce website build with the MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SohagCity/e-commerce.git"
  },
  "author": "Sohag Miah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SohagCity/e-commerce/issues"
  },
  "homepage": "https://github.com/SohagCity/e-commerce#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "heroku": "^7.42.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.25",
    "nodemon": "^2.0.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  }
}
